<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClockActivity">

    <LinearLayout
        style="@style/Layout.Vertical"
        android:layout_above="@id/text_time"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_current_lesson"
            style="@style/Title.Header"
            android:text="@string/timer_now" />

        <TextView
            android:id="@+id/text_current_lesson"
            style="@style/Title"
            android:includeFontPadding="false"
            android:text="@string/message_error" />

    </LinearLayout>


    <TextView
        android:id="@+id/title_time"
        style="@style/Title.Header"
        android:layout_alignTop="@id/text_time"
        android:text="@string/timer_ends_in" />

    <TextView
        android:id="@+id/text_time"
        style="@style/Title"
        android:layout_centerVertical="true"
        android:fontFeatureSettings="tnum"
        android:text="@string/message_error"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/text_ago"
        style="@style/Title"
        android:layout_alignBottom="@id/text_time"
        android:text="@string/timer_ago"
        android:textSize="16sp" />


    <LinearLayout
        style="@style/Layout.Vertical"
        android:layout_above="@id/text_date_time"
        android:layout_below="@id/text_time"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_next_lesson"
            style="@style/Title.Header"
            android:text="@string/timer_then" />

        <TextView
            android:id="@+id/text_next_lesson"
            style="@style/Title"
            android:includeFontPadding="false"
            android:text="@string/message_error" />

    </LinearLayout>


    <TextView
        android:id="@+id/text_date_time"
        style="@style/Title"
        android:layout_alignParentBottom="true"
        android:fontFeatureSettings="tnum"
        android:text="@string/message_error" />

</RelativeLayout>